<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chamod.backupalbumfinal" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="BackUpAlbum"
        android:theme="@style/AppTheme" >


        <activity
            android:name=".MainLogin"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewAccountActivity"
            android:label="New Account" >
        </activity>
        <activity
            android:name=".LoggedAccountActivity"
            android:label="Logged In" >
        </activity>
        <activity
            android:name=".OpenedAlbumActivity"
            android:label="Album" >
        </activity>

    </application>

</manifest>
