<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chamod.backupalbumfinal" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="BackUpAlbum"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainLoginActivity"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.NewAccountActivity"
            android:label="New Account" >
        </activity>
        <activity
            android:name=".Activities.LoggedAccountActivity"
            android:label="Logged In" >
        </activity>
        <activity
            android:name=".Activities.OpenedAlbumActivity"
            android:label="Album" >
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
